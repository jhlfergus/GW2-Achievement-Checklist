<Window x:Class="GuildWars2Achievements.SelectSeasonalDailiesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seasonal Daily" Height="288" Width="267"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0">
            <StackPanel x:Name="CheckboxesPanel" Margin="10">
                <!-- Checkboxes will be added here -->
            </StackPanel>
        </ScrollViewer>

        <Button Grid.Row="1" Content="OK" Width="80" Height="30" HorizontalAlignment="Center" Margin="10" Click="OkButton_Click" />
    </Grid>
</Window>