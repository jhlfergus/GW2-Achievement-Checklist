<Window x:Class="GuildWars2Achievements.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="API Key Input" Height="140" Width="505"
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Enter your Guild Wars 2 API Key:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="txtResponse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="470" Margin="10,40,0,10"/>
        <Button Content="OK" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75" Margin="0,70,0,10" Click="btnDialogOk_Click"/>
    </Grid>
</Window>